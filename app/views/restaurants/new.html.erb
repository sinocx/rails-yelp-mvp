<div class="wrapper">
  <div class="container">
    <div class="form">
      <%= simple_form_for(@restaurant) do |f| %>
        <%= f.error_notification%>
        <div class="form-inputs">
          <%= f.input :name, {:class => "form-control"} %>
          <%= f.input :address, {:class => "form-control"} %>
          <label >Category</label>
          <%= f.select :category, ["chinese", "italian", "japanese", "french", "belgian"], {}, {:class => "form-control"} %>
          <%= f.input :phone_number, {:class => "form-control submit"} %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, {:class => "btn btn-primary"} %>
        </div>
      <% end %>
    </div>
    <%= link_to "Home", restaurants_path, class: "btn btn-primary add-restaurant"%>
  </div>
</div>
